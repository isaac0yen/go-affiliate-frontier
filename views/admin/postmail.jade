doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Send Mail
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')
    script.
      function readAndDisplayImage(input, imageElement) {
        const file = input.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            imageElement.src = e.target.result;
            console.log(e.target.result);
            document.getElementById('HiddenImageInput').value = e.target.result;
          };
          reader.readAsDataURL(file);

          document.getElementById('click').style.display = 'none';
        }
      }

  body(style='background-color: #F8F9FA; color: #343A40;')

    // Three Forms Section
    .container-fluid.d-lg-none
      .row
        .col-12
          button.btn.btn-secondary.mt-3(data-bs-toggle='offcanvas', data-bs-target='#side-sm', aria-controls='side-sm')
            | Toggle Sidebar
        .col-sm-12.d-md-none.d-lg-block#Main(style='height: 110vh; margin: auto;')
          form(action='./mail', method='post')
            .form-group.m-2
              label(for='title', class='form-label') Title
              input#title.form-control(type='text', placeholder='Enter title', required, name='title')

            .form-group.m-2
              label(for='image', class='form-label') Upload Image
              input#imageInput.form-control(type='file', accept='image/*', style='display: none;', onchange='readAndDisplayImage(this, document.getElementById("uploadedImage"))')
              input#HiddenImageInput(type='hidden', name='image')
              .image-upload-box.p-3(style='position: relative; width: 100%; height: 200px; border: 2px dashed #dee2e6; border-radius: 5px; text-align: center; overflow: hidden;')
                img#uploadedImage(style='max-width: 100%; max-height: 100%;margin:auto;')
                label.btn.btn-secondary#click(for='imageInput', style='position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);') Upload Image

            .form-group.m-2
              label(for='content', class='form-label') Content
              textarea#content.form-control(rows='4', placeholder='Enter content', required, name='content')

            button.btn.btn-primary(type='submit', style='width: 100%;') Submit

