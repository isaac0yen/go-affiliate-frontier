doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Prospects Page
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body(style='background-color: #F8F9FA; color: #343A40;')

    // Large Screens Sidebar
    .container-fluid
      .row
        .col-lg-2.bg-light.w3-animate-left.d-none.d-md-block(style='height: 100vh; overflow-y: auto;', id='side-lg')
          nav.nav.flex-column.mt-3
            a.btn.d-md-block.btn-secondary.mb-1.widget#header1(href='./Dashboard')
              | Dashboard
            a.btn.d-md-block.btn-secondary.mb-1.widget#header1(href='./post-mail')
              | Mail               
            // Add other buttons

        .col-lg-10.d-none.d-md-block#Main(style='height: 110vh; margin: auto;')
          // Prospects Table Section
          .mt-5
            if prospects && prospects.length > 0
              table.w3-table-all.w3-card-4
                thead
                  tr.w3-light-grey
                    th First Name
                    th Last Name
                    th Email
                    th Phone
                tbody
                  each prospect in prospects
                    tr
                      td= prospect.firstName || 'No information'
                      td= prospect.lastName || 'No information'
                      td= prospect.email || 'No information'
                      td= prospect.phone || 'No information'
            else
              p No information

      // Small Screens Sidebar with Button
      .container-fluid.d-lg-none
        .row
          .col-12
            button.btn.btn-secondary.mt-3(data-bs-toggle='offcanvas', data-bs-target='#side-sm', aria-controls='side-sm')
              | Toggle Sidebar

        .col-12#Main(style='height: 110vh; margin: auto;')
          // Prospects Table Section
          .mt-5
            if prospects && prospects.length > 0
              .table-responsive
                table.w3-table-all.w3-card-4(style='overflow-x: auto;')
                  thead
                    tr.w3-light-grey
                      th First Name
                      th Last Name
                      th Email
                      th Phone
                  tbody
                    each prospect in prospects
                      tr
                        td= prospect.firstName || 'No information'
                        td= prospect.lastName || 'No information'
                        td= prospect.email || 'No information'
                        td= prospect.phone || 'No information'
            else
              p No information


        .offcanvas.offcanvas-start.bg-light.w3-animate-left(style='height: 120vh;width:80%; overflow-y: auto; position: absolute; top: 0; left: 0; z-index: 5000;', id='side-sm')
          nav.nav.flex-column.mt-3.p-2
            a.btn.d-md-block.btn-secondary.mb-1.widget#header1(href='./Dashboard')
              | Dashboard
            a.btn.d-md-block.btn-secondary.mb-1.widget#header1(href='./post-mail')
              | Mail 
              span.bold-black With 
              | Logo
            // Add other buttons



  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')
